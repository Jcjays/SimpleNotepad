<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.bottomsheet.SortBottomSheet">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sortLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Sort order"
        android:textColor="?attr/colorOnBackground"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintTop_toBottomOf="@id/sortLabelTextView" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/epoxyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/view"
        tools:itemCount="3"
        tools:listitem="@layout/model_sort_order_item" />

    <TextView
        android:id="@+id/sortLabelTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_margin="16dp"
        android:textColor="?colorOnBackground"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/epoxyRecyclerView"
        app:layout_constraintBottom_toTopOf="@id/categoryEpoxyRecyclerView"/>

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/categoryEpoxyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:itemSpacing="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/epoxyRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/epoxyRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/sortLabelTextView2"
        tools:itemCount="8"
        tools:listitem="@layout/model_category_buttons"
        android:paddingBottom="70dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>