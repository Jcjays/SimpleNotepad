<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:label="Home"
        android:name="com.example.simplenotepad.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_homeFragment_to_addCategoryFragment"
            app:destination="@id/addCategoryFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            />
    </fragment>


    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.simplenotepad.add.AddNoteFragment"
        android:label="Add notes"
        tools:layout="@layout/fragment_add_note" >
        <argument
            android:name="noteIdAction"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"
            />
    </fragment>


    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.example.simplenotepad.AddCategoryFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_add_category" />
    <fragment
        android:id="@+id/sortBottomSheet"
        android:name="com.example.simplenotepad.home.bottomsheet.SortBottomSheet"
        android:label="fragment_sort_bottom_sheet"
        tools:layout="@layout/fragment_sort_bottom_sheet" />
</navigation>